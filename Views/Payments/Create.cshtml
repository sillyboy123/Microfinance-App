@model MicrofinanceApp.Models.Payment

@{
    ViewData["Title"] = "Record Payment";
}

<h1>Record New Payment</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="LoanId" class="control-label">Select Loan</label>
                <select asp-for="LoanId" class="form-control" asp-items="ViewBag.LoanId">
                    <option value="">-- Select Loan --</option>
                </select>
                <span asp-validation-for="LoanId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Amount" class="control-label">Payment Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Record Payment" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
