@model FinPlus.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="hero-section text-white mb-4">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h1 class="display-4 fw-bold mb-3">Create Account</h1>
                <p class="lead mb-0 opacity-90">Join MicroFin Plus to access financial services</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-envelope text-primary"></i>
                                </span>
                                <input asp-for="Email" class="form-control border-start-0" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-primary"></i>
                                </span>
                                <input asp-for="Password" class="form-control border-start-0" type="password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Password must be at least 8 characters and include letters, numbers, and special characters
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-primary"></i>
                                </span>
                                <input asp-for="ConfirmPassword" class="form-control border-start-0" type="password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>                        <div class="form-check mb-4">
                            <input asp-for="AcceptTerms" class="form-check-input" type="checkbox">
                            <label class="form-check-label" asp-for="AcceptTerms">
                                I agree to the <a href="/Home/Privacy" class="text-decoration-none">Privacy Policy</a> and Terms of Service
                            </label>
                            <span asp-validation-for="AcceptTerms" class="text-danger d-block"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-0">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Sign in</a></p>
                    </div>
                </div>
            </div>            <!-- Features Section -->
            <div class="row g-4 mt-4">
                <div class="col-md-4">
                    <div class="feature-card text-center p-4">
                        <i class="fas fa-shield-alt feature-icon"></i>
                        <h5>Secure</h5>
                        <p class="small text-muted">Bank-grade security measures</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4">
                        <i class="fas fa-bolt feature-icon"></i>
                        <h5>Fast</h5>
                        <p class="small text-muted">Quick loan processing</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4">
                        <i class="fas fa-headset feature-icon"></i>
                        <h5>Support</h5>
                        <p class="small text-muted">24/7 customer service</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
