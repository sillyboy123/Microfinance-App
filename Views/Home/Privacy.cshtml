@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="bg-light rounded-3 p-4 mb-4">
    <div class="container-fluid py-3">
        <h1 class="display-6 fw-bold">Privacy Policy</h1>
        <p class="lead mb-0">Your privacy and data security are our top priorities</p>
    </div>
</div>

<div class="container">
    <!-- Table of Contents -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h2 class="h5 mb-3">Quick Navigation</h2>
            <nav class="nav flex-column">
                <a class="nav-link ps-0" href="#information"><i class="fas fa-angle-right me-2"></i>Information We Collect</a>
                <a class="nav-link ps-0" href="#usage"><i class="fas fa-angle-right me-2"></i>How We Use Your Information</a>
                <a class="nav-link ps-0" href="#security"><i class="fas fa-angle-right me-2"></i>Data Security</a>
                <a class="nav-link ps-0" href="#cookies"><i class="fas fa-angle-right me-2"></i>Cookie Policy</a>
                <a class="nav-link ps-0" href="#rights"><i class="fas fa-angle-right me-2"></i>Your Rights</a>
            </nav>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-8">
            <!-- Main Privacy Content -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-4" id="information">Information We Collect</h2>
                    <p>We collect information to provide better services to our clients and ensure secure financial transactions:</p>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="fas fa-user-circle text-primary me-2"></i>
                            <strong>Personal Information:</strong> Name, contact details, and identification documents
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-file-invoice text-primary me-2"></i>
                            <strong>Financial Information:</strong> Income details, loan history, and payment records
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-shield-alt text-primary me-2"></i>
                            <strong>Security Information:</strong> Account credentials and transaction verification data
                        </li>
                    </ul>

                    <h2 class="h4 mb-4 mt-5" id="usage">How We Use Your Information</h2>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        Permitted Uses
                                    </h5>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-angle-right me-2"></i>Process loan applications</li>
                                        <li><i class="fas fa-angle-right me-2"></i>Verify client identity</li>
                                        <li><i class="fas fa-angle-right me-2"></i>Manage loan accounts</li>
                                        <li><i class="fas fa-angle-right me-2"></i>Send important updates</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-times-circle text-danger me-2"></i>
                                        Prohibited Uses
                                    </h5>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-angle-right me-2"></i>Sell to third parties</li>
                                        <li><i class="fas fa-angle-right me-2"></i>Share without consent</li>
                                        <li><i class="fas fa-angle-right me-2"></i>Marketing without permission</li>
                                        <li><i class="fas fa-angle-right me-2"></i>Unauthorized disclosure</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2 class="h4 mb-4 mt-5" id="security">Data Security</h2>
                    <p>We implement robust security measures to protect your information:</p>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <i class="fas fa-lock fa-2x text-primary mb-3"></i>
                                <h5>Encryption</h5>
                                <p class="small">Data encryption at rest and in transit</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <i class="fas fa-shield-alt fa-2x text-primary mb-3"></i>
                                <h5>Access Control</h5>
                                <p class="small">Strict access controls and authentication</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <i class="fas fa-history fa-2x text-primary mb-3"></i>
                                <h5>Regular Audits</h5>
                                <p class="small">Regular security audits and updates</p>
                            </div>
                        </div>
                    </div>

                    <h2 class="h4 mb-4 mt-5" id="cookies">Cookie Policy</h2>
                    <p>We use cookies and similar tracking technologies to enhance your experience on our platform:</p>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-cookie-bite text-primary me-2"></i>
                                        Essential Cookies
                                    </h5>
                                    <p class="small">Required for basic functionality:</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-angle-right me-2"></i>Session management</li>
                                        <li><i class="fas fa-angle-right me-2"></i>Security features</li>
                                        <li><i class="fas fa-angle-right me-2"></i>User preferences</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-chart-bar text-primary me-2"></i>
                                        Analytics Cookies
                                    </h5>
                                    <p class="small">Help us improve our service:</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-angle-right me-2"></i>Usage patterns</li>
                                        <li><i class="fas fa-angle-right me-2"></i>Performance monitoring</li>
                                        <li><i class="fas fa-angle-right me-2"></i>Error tracking</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Side Content -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h3 class="h5 mb-4" id="rights">Your Rights</h3>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-eye text-primary me-3"></i>
                        <div>
                            <h6 class="mb-0">Access Your Data</h6>
                            <small class="text-muted">View your stored information</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-edit text-primary me-3"></i>
                        <div>
                            <h6 class="mb-0">Update Information</h6>
                            <small class="text-muted">Modify incorrect data</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-trash-alt text-primary me-3"></i>
                        <div>
                            <h6 class="mb-0">Request Deletion</h6>
                            <small class="text-muted">Remove your data</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4 bg-primary text-white">
                <div class="card-body">
                    <h3 class="h5 mb-4">Contact Us</h3>
                    <p class="small">For privacy-related inquiries or concerns, please contact our Data Protection Officer:</p>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-envelope me-3"></i>
                        <div>privacy@microfin.com</div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-phone me-3"></i>
                        <div>+234 814 995 0253</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-light border-0 shadow-sm mt-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-info-circle text-primary me-3 fa-2x"></i>
            <div>
                <h4 class="h6 mb-1">Last Updated</h4>
                <p class="small mb-0">This privacy policy was last updated on @DateTime.Now.ToString("MMMM dd, yyyy")</p>
            </div>
        </div>
    </div>
</div>
